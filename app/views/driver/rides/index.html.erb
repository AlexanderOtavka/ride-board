<h1>Rides</h1>

<table>
  <thead>
    <tr>
      <th>Start location</th>
      <th>Start datetime</th>
      <th>End location</th>
      <th>End datetime</th>
      <th>Driver</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rides.each do |ride| %>
      <%= render "rides/ride_thumbnail", ride: ride,
                 ride_path: driver_ride_path(ride),
                 edit_path: edit_driver_ride_path(ride) %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ride', new_driver_ride_path %>
