<section id="upcoming-rides">
  <h2>Upcoming Rides</h2>

  <table>
    <thead>
      <tr>
        <th>Start location</th>
        <th>Start datetime</th>
        <th>End location</th>
        <th>End datetime</th>
        <th>Driver</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% upcoming_rides.each do |ride| %>
        <%= render "rides/ride_thumbnail", ride: ride,
                  ride_path: ride_path[ride],
                  edit_path: edit_path[ride] %>
      <% end %>
    </tbody>
  </table>
</section>

