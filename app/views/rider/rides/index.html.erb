<h1>Rides</h1>

<table>
  <thead>
    <tr>
      <th>Start location</th>
      <th>Start datetime</th>
      <th>End location</th>
      <th>End datetime</th>
      <th>Driver</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rides.each do |ride| %>
      <tr>
        <td><%= ride.start_location.name %></td>
        <td><%= ride.start_datetime %></td>
        <td><%= ride.end_location.name %></td>
        <td><%= ride.end_datetime %></td>
        <td><%= ride.driver ? ride.driver.email : "" %></td>
        <td>$<%= ride.price %></td>
        <td><%= link_to 'Show', rider_ride_path(ride) %></td>
        <td><%= link_to 'Edit', edit_rider_ride_path(ride) %></td>
        <td><%= link_to 'Destroy', rider_ride_path(ride),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

